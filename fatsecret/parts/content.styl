td[width="*"] > .smallText:first-child
    position relative

td[class^="border"]
    height 24px

    a[href*="deleteentry"]
        position absolute
        right 0
        display inline-block
        text-decoration none
        line-height 1
        width 8.5px
        height 8.5px
        font-size 10px
        text-align center
        border-radius 50%
        padding 6px
        background hsla( 220, 50%, 90%, 0 )
        opacity 0
        box-shadow 0 0 0 3px hsla(0, 0%, 100%, .5)

        &:before
            content 'âœ•'

        &:hover
            background hsla( 220, 50%, 95%, 1 )

    &:hover a[href*="deleteentry"]
        opacity 1

img[src$="/delete.png"]
img[src$="FA_itemPanel_arrow.png"]
    display none

td[style="height:7px"]
    height 0 !important

.smallText
    padding 0 !important

    & + div > &
        display inline-block
        color #aaa !important

    & + div > a:after
        content ','
        margin-left -.25em

.open span
.close span /* ADD button */
    font-weight inherit
    font-size inherit
    margin-left 17px !important

.open img /* ADD button '+' icon */
    width 9px
    height 9px
    margin-top 14px

.close
    background-size 9px !important
    padding-left .5px
    position relative
    display inline-block

.generic.foodsTbl ~ br
    display none

