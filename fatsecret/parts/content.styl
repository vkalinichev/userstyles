td[width="*"] > .smallText:first-child
    position relative

td[class^="border"]
    height 24px
    border none !important

    a[href*="deleteentry"]
        position absolute
        right 0
        display inline-block
        text-decoration none
        line-height 1
        width 8.5px
        height 8.5px
        font-size 10px
        text-align center
        border-radius 50%
        padding 6px
        background hsla( 220, 50%, 90%, 0 )
        opacity 0
        box-shadow 0 0 0 3px hsla(0, 0%, 100%, .5)

        &:before
            content 'âœ•'

        &:hover
            background hsla( 220, 50%, 95%, 1 )

    &:hover a[href*="deleteentry"]
        opacity 1

img[src$="/delete.png"]
img[src$="FA_itemPanel_arrow.png"]
    display none

td[style="height:7px"]
    height 0 !important

.smallText
    padding 0 !important

    & + div > &
        display inline-block
        color #aaa !important

    & + div > a:after
        content ','
        margin-left -.25em

.close
    background-size 9px !important
    padding-left .5px
    position relative
    display inline-block

.open span
.close span /* ADD button */
    font-weight inherit
    font-size inherit
    margin-left 17px !important

.open img /* ADD button '+' icon */
    width 9px
    height 9px
    margin-top 14px


/* Add button */
.food_main_link.open
    background-color transparent
    position relative
    border-radius 0 0 4px 4px

    &:hover
        background-color $hover-bg


.generic.foodsTbl
.generic.activitiesTbl
    margin-top 20px
    whiteBox()

    ~ br
        display none

    > tbody > tr

        &:nth-child(2) /* Spacer */
            display none

        &:nth-child(4) > td > .generic.foodsNutritionTbl /* First table element */
            margin-top 12px

        &:nth-last-child(2) > .borderLeft /* Last table element */
            padding-bottom 10px !important

/* Table header*/
.generic.foodsNutritionTbl

    > tbody > tr[style*='height']
        height 32px !important
        vertical-align bottom


    /* Align last column to grid */
    td[width='10']
        width 9px !important

    .sub
        padding 0 6px 0 1px

.greytitlex
    padding-left 20px !important
    font-size 18px !important

/* Lines */
tr:not(:last-child) > td.borderBottom /* Top line */
tr.row:not(:nth-child(4)) > td.borderBottom /* Bottom line */
    position relative
    height 12px

    &:after
        content ''
        position: absolute
        left 16px
        right 16px
        bottom 0
        height 1px
        box-shadow 0 .05em $thin-border-color inset

tr:not(:last-child) > td.borderBottom /* Top line */
    > img
        display none
    &:after
        bottom 0

tr.row:not(:nth-child(4)) > td.borderBottom /* Bottom line */
    &:after
        top 0
